<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="apple-touch-icon" sizes="180x180" href="images/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="images/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="images/favicon-16x16.png">
  <link rel="manifest" href="images/site.webmanifest">
  <link rel="mask-icon" href="images/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visionary</title>
  <link rel="stylesheet" href="/stylesheets/profile.css">
  <script src="https://kit.fontawesome.com/14f67ef9ae.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('./partials/header') %>

  <div class="profile w-full min-h-screen bg-slate-100 text-gray-800 pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
      <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
      <div class="relative">
        <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-400 cursor-pointer">
          <i class="ri-pencil-fill"></i>
        </span>
        <div class="w-32 h-32 bg-white rounded-full overflow-hidden">
          <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="">
        </div>
      </div>
      
      <h1 class="text-3xl font-semibold mt-5"><%= user.fullname %></h1>
      <h3 class="text-md text-gray-500 text-base">@<%= user.username %></h3>
      <a href="/addpost" class="bg-purple-500 hover:bg-pink-600 text-white font-bold py-2 px-10 rounded">Add New Post</a>
    </div>
  
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
      <% user.posts.forEach(post => { %>
        <div class="card bg-white rounded-lg shadow-lg p-4 w-64">
          <!-- Post Image -->
          <div class="w-full h-40 bg-white rounded-lg overflow-hidden">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= post.image %>" alt="Post Image">
          </div>
  
          <!-- Post Title and Description -->
          <div class="mt-2">
            <h6 class="text-lg font-semibold"><%= post.title %></h6>
          </div>
  
          <!-- Comments Section -->
          <div class="mt-4">
            <h6 class="text-sm font-semibold mb-2">Comments:</h6>
            <% if (post.comments.length > 0) { %>
              <% post.comments.forEach(comment => { %>
                <div class="flex items-start mb-2">
                  <!-- Commenter's Profile Image -->
                  <div class="w-8 h-8 rounded-full overflow-hidden mr-2">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= comment.user.profileImage %>" alt="<%= comment.user.username %>">
                  </div>
                  <!-- Comment Text -->
                  <div class="flex-1">
                    <p class="text-sm text-gray-800"><strong><%= comment.user.username %></strong>: <%= comment.text %></p>
                    <p class="text-xs text-gray-500"><%= comment.createdAt.toLocaleString() %></p>
                  </div>
                </div>
              <% }); %>
            <% } else { %>
              <p class="text-sm text-gray-500">No comments yet.</p>
            <% } %>
          </div>
  
          <!-- Edit Button -->
          <div class="w-full flex justify-center mt-2">
            <a href="/posts/edit/<%= post._id %>" class="bg-pink-500 hover:bg-purple-600 text-white font-bold py-1 px-20 rounded-lg overflow-hidden text-center">Edit</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  
  <script>
    document.querySelector("#uploadicon").addEventListener("click", function(){
      document.querySelector("#uploadform input").click();
    });
  
    document.querySelector("#uploadform input").addEventListener("change", function(){
      document.querySelector("#uploadform").submit();
    });
  </script>
  
  <%- include('./partials/footer') %>
</body>
</html>